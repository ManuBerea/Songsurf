<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B271AE2A</item>
        <item name="colorPrimaryDark">#DF227525</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MaterialComponentsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--         Customize your theme here. -->
        <item name="colorPrimary">#B271AE2A</item>
        <item name="colorPrimaryDark">#DF227525</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipStyle">@style/MyChipStyle</item>

    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
    </style>

</resources>